<div class="max-w-3xl mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">Recent Posts</h1>
  {% for post in collections.all | reverse %}
    {% if post.data.title %}
      <article class="mb-8">
        <h2 class="text-2xl font-semibold mb-2">
          <a href="{{ post.url }}" class="hover:text-blue-600">{{ post.data.title }}</a>
        </h2>
        <time class="text-gray-600 text-sm">{{ post.date.toISOString().split('T')[0] }}</time>
      </article>
    {% endif %}
  {% endfor %}

  <nav class="mt-16 pt-8 border-t">
    <h2 class="text-2xl font-bold mb-4">Categories</h2>
    <ul class="space-y-2">
      <li><a href="/film/" class="text-blue-600 hover:underline">Film</a></li>
      <li><a href="/music/" class="text-blue-600 hover:underline">Music</a></li>
      <li><a href="/personal/" class="text-blue-600 hover:underline">Personal</a></li>
      <li><a href="/technical/" class="text-blue-600 hover:underline">Technical</a></li>
    </ul>
